name: Update GitHub Stats

on:
  schedule:
    - cron: "0 4 * * *"    #every day at 4 AM UTC
  workflow_dispatch:

jobs:
  stats:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Generate Stats
        uses: readme-tools/github-readme-stats-action@v1
        with:
          card: stats
          options: username=papaj2139&show_icons=true&theme=tokyonight&hide_border=true&include_all_commits=true
          path: stats.svg

      - name: Generate Top Langs
        uses: readme-tools/github-readme-stats-action@v1
        with:
          card: top-langs
          options: username=papaj2139&layout=compact&theme=tokyonight&hide_border=true&langs_count=12
          path: top-langs.svg

      - name: Commit & Push
        run: |
          git config user.name "github-actions[bot]"
          git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
          git add *.svg
          git commit -m "chore: update readme stats" || exit 0
          git push
